#!/bin/bash

# kurbeScript - Start and verify a local Kubernetes cluster using Minikube

# Exit if any command fails
set -e

# Check if minikube is installeds
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube is not installed. Please install it first: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

# Check if kubectl is installed
if ! command -v kubectl &> /dev/null
then
    echo "âŒ kubectl is not installed. Please install it first: https://kubernetes.io/docs/tasks/tools/"
    exit 1
fi

# Start Minikube cluster
echo "ğŸš€ Starting Minikube cluster..."
minikube start

# Verify cluster status
echo "ğŸ” Verifying cluster info..."
kubectl cluster-info

# Get list of pods in the default namespace
echo "ğŸ“¦ Fetching available pods..."
kubectl get pods --namespace=default

echo "âœ… Kubernetes local cluster is running and accessible."
